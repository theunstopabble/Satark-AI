{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "VITE_CLERK_PUBLISHABLE_KEY",
    "VITE_API_URL",
    "DATABASE_URL",
    "CLERK_SECRET_KEY",
    "ENGINE_URL"
  ],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
